<div class="columns is-centered">
  <div class="column is-half has-background-primary">

    <div class="column is-6">
      <h2 class="is-size-3 has-text-centered">Log In</h2>

      <form id="login-form">
        <div class="field">
          <div class="control">
            <label class="label">Email:</label>
            <input class="input" id="login-email" type="text" placeholder="email@email.com">
          </div>
        </div>

        <div class="field">
          <div class="control">
            <label class="label">Password:</label>
            <input class="input" id="login-pw" type="password" placeholder="password">
          </div>
        </div>

        <div class="field">
          <div class="control">
            <button class="button" type="submit">
              <span class="icon is-small">
                <i class="fas fa-sign-in-alt"></i>
              </span>
              <span>Login</span>
            </button>
          </div>
        </div>
      </form>
    </div>

    <div class="column is-6">
      <h2 class="is-size-3 has-text-centered">Or Sign Up</h2>
      <form id="signup-form">
        <div class="field">
          <div class="control">
            <label class="label">Username:</label>
            <input class="input" id="signup-username" type="text" placeholder="username">
          </div>
        </div>
        <div class="field">
          <div class="control">
            <label class="label">Email:</label>
            <input class="input" id="signup-email" placeholder="email@email.com">
          </div>
        </div>

        <div class="field">
          <div class="control">
            <label class="label">Password:</label>
            <input class="input" id="signup-pw" type="password" placeholder="password">
          </div>
        </div>

        <div class="field">
          <div class="control">
            <button class="button" type="submit">
              <span class="icon is-small">
                <i class="fas fa-user-tie"></i>
              </span>
              <span>Sign Up</span>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/javascript/loginSignup.js"></script>