  <div class="box">
    <div class="card my-3">
      <header class="card-hearder level">
        <div class="level-item">
          <a href="post/{{id}}" class="post-title is-underlined is-size-3 has-text-weight-medium">
            {{title}}
          </a>
        </div>
        {{#if url}}
        <div class="level-item">
          <a class="is-underlined is-italic" href="{{url}}" target="_blank">
            {{format_url url}}
          </a>
        </div>
        {{/if}}
        <div class="level-item">
          {{format_date createdAt}}
        </div>
      </header>
      <div class="card-content pt-0">
        <p class="is-size-5">
          {{text}}
        </p>
      </div>
    </div>
    <div class="has-text-centered">
        <p>Posted by: {{user.username}}</p>
    </div>
  </div>