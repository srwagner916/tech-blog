<div class="columns is-centered">
  <div class="column is-half">
    <h2 class="title">Edit Post</h2>
    <form id="edit-form">
      <div class="field">
        <div class="control">
          <label class="label">Title</label>
          <input class="input" type="text" name="title" placeholder="{{post.title}}" value="{{post.title}}">
        </div>
      </div>

      <div class="field">
        <div class="control">
          <label class="label">Post text:</label>
          <textarea class="textarea" name="text">{{post.text}}</textarea>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <label class="label">URL:</label>
          <input class="input" name="url" placeholder="{{post.url}}" value="{{post.url}}">
        </div>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <button class="button" type="submit">
            <span class="icon icon-is-small">
              <i class="fas fa-edit"></i>
            </span>
            <span>Edit Post</span>
          </button>
        </div>
        <div class="control">
          <button id="delete-btn" class="button" type="button">
            <span class="icon icon-is-small">
              <i class="fas fa-trash-alt"></i>
            </span>
            <span>Delete Post</span>
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/javascript/edit-and-delete-post.js"></script>